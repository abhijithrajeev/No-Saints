{{ 'no-saints-testimonials.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" type="text/css" href="{{ 'slick.css' | asset_url }}">
<link rel="stylesheet" type="text/css" href="{{ 'slick-theme.css' | asset_url }}">
<!-- Include jQuery from Shopify CDN if not included already -->
<script src="//code.jquery.com/jquery-1.11.0.min.js"  defer="defer"></script>
<script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"  defer="defer"></script>

<!-- Include Slick JS from your assets -->
<script src="{{ 'slick.min.js' | asset_url }}"  defer="defer"></script>

<!-- Include your custom JS file for testimonials -->
<script src="{{ 'testimonials-slick.js' | asset_url }}"  defer="defer"></script>
<script src="{{ 'initialize-slick.js' | asset_url }}"  defer="defer"></script>

{% if section.settings['testimonial-heading'] %}
  <div class="testimonial-container">
    <div class="testimonial-slider your-class">
      {%- for block in section.blocks -%}
        <div class="testimonial-item">
          <div class="testimonial-content">
            <p>{{ block.settings['testimonial-text'] }}</p>
            <h2>{{ block.settings['testimonial-author'] }}</h2>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
{% endif %}


{% schema %}
{
  "name": "Testimonials Section",
  "settings": [
    {
      "type": "text",
      "id": "testimonial-heading",
      "label": "Section Heading",
      "default": "What Our Clients Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "testimonial-text",
          "label": "Testimonial Text",
          "default": "This is a sample testimonial."
        },
        {
          "type": "text",
          "id": "testimonial-author",
          "label": "Author Name",
          "default": "John Doe"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Testimonials",
      "name": "Testimonials Section"
    }
  ]
}
{% endschema %}
